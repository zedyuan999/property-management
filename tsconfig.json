{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "allowJs": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "types": ["naive-ui/volar"]
  },
  "exclude": ["node_modules"],
  "include": [
    "src/main.ts",
    "src/components/*.vue",
    "src/views/*.vue",
    "src/App.vue",
    "global.d.ts",
  ]
}
